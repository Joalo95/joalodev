---
import Section from "./Section.astro";
---

<Section title="Proyects" color="black" id="proyects">
  <div slot="footer" class="grid grid-cols-4 gap-3 mx-auto w-[90vw]">
    <div class="card">
      <h2 class="text-lg p-4">Proyect 1 - Pokedex</h2>
      <h3 class="text-sm p-2">Node.js | React | PostgreSQL</h3>
    </div>
    <div class="card">
      <h2 class="text-lg p-4">Proyect 2 - Inmobiliaria</h2>
      <h3 class="text-sm p-2">Node.js | React | PostgreSQL</h3>
    </div>
    <div class="card">
      <h2 class="text-lg p-4">Proyect 3 - Tienda online</h2>
      <h3 class="text-sm p-2">Node.js | React | Tailwind | PostgreSQL</h3>
    </div>
    <div class="card">
      <h2 class="text-lg p-4">Proyect 4 - Ecommerce</h2>
      <h3 class="text-sm p-2">Node.js | React | Redux | ChakraUI | MongoDB</h3>
    </div>
  </div>

  <img
    slot="background"
    alt=""
    class="h-full w-full object-cover object-center"
    src="/mountains-tres.jpg"
  />
</Section>
<style>
  .card {
    backdrop-filter: blur(7px) saturate(150%);
    -webkit-backdrop-filter: blur(7px) saturate(150%);
    background-color: rgba(217, 219, 224, 0.6);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.125);
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
  }
</style>

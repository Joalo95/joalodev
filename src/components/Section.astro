---
const { color, title, subtitle, id } = Astro.props;
const textColor = `text-${color}`;
---

<section
  class="landing-section sm:w-[calc(100vw-1.1rem)] md:w-[calc(100vw-1.1rem)] bg-black h-screen w-[calc(100vw-1.1rem)] text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
  <div class="z-30 relative px-10 h-screen flex flex-col">
    <header>
      <h2 class={`${textColor} pt-40 text-4xl font-medium`}>
        {title}
      </h2>
      <p class={`${textColor} text-sm`}>
        {subtitle}
      </p>
    </header>

    <footer class="flex flex-col flex-grow justify-end items-center pb-20">
      <slot name="footer" />
    </footer>
  </div>

  <div class="h-screen w-screen absolute top-0 bottom-0 z-10">
    <slot name="background" />
  </div>
</section>
